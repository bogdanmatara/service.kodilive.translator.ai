<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
    <category label="Configurare Traducere">
        <setting id="api_key" 
                 type="text" 
                 label="Google Gemini API Key" 
                 default="" />

        <setting id="model" 
                 type="enum" 
                 label="Model AI" 
                 values="gemini-2.0-flash|gemini-1.5-flash" 
                 default="0" />
        
        <setting id="temp" 
                 type="slider" 
                 label="Temperature" 
                 default="0.15" 
                 range="0,0.05,1.0" 
                 option="float"/>
    
        <setting id="target_lang" 
                 type="text" 
                 label="Limba Țintă" 
                 default="Romanian" 
                 enable="false" />
    </category>
</settings>



