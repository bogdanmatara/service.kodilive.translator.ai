<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.kodilive.translator.ai" name="Gemini Subtitle Translator" version="2.5.2" provider-name="Gemini">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.25.1"/>
    </requires>
    
    <extension point="xbmc.python.script" library="service.py">
        <provides>executable</provides>
    </extension>

    <extension point="xbmc.service" library="service.py" />

    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">AI Subtitle Translator using Gemini</summary>
        <description lang="en_GB">Automatically translates English subtitles to Your Language using Google Gemini Flash models.</description>
        <platform>all</platform>
        <license>GPL-2.0-only</license>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon>
